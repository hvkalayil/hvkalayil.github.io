---
    import MyPic from "./MyPic.svelte"
    import MyName from "./MyName.astro"
    import MyTools from "./MyTools.svelte"
---
<div class="w-full h-fit about-card-container p-4">
    <div class="h-fit card">
        <div class="flex flex-col md:flex-row">
            <div class="flex-col w-full h-auto mb-2 md:h-fit md:mr-2 md:w-1/3">
                <MyPic client:idle/>
            </div>
            <div class="w-full">
                <div class="w-full mb-2 heading-details">
                    <MyName />
                </div>
                <div
                    class="flex w-full flex-row flex-wrap my-tech h-4"
                    id="competencyContainer"
                >
                    <MyTools client:idle/>
                </div>
            </div>
        </div>
    </div>
</div>