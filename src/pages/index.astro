---
import BaseHead from "../components/portfolio/BaseHead.astro";
import PortfolioBody from "../components/portfolio/main/PortfolioBody.astro";
import NavBar from "../components/portfolio/navbar/NavBar.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body
    class="bg-primary-900 text-body dark:bg-primary-dark-900 dark:text-body-dark"
  >
    <main class="font-body">
      <div class="flex flex-col w-full md:flex-row">
        <NavBar />

        <PortfolioBody />
      </div>
    </main>
  </body>
</html>
